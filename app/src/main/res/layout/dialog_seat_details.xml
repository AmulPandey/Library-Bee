<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/seatNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seat Number"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/reservationTimestampTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation Timestamp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/reserveStatusMorningTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserved for Morning"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/reserveStatusEveningTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserved for Evening"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/reserveStatusFullDayTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reserved for Full Day"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <TextView
        android:id="@+id/usernamesLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usernames:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/usernamesListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/useridsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User IDs:"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <ListView
        android:id="@+id/useridsListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
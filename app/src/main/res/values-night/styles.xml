<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Custom SearchView Style -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <!-- Background color -->
        <item name="android:background">#FFFFFF</item>
        <!-- Text color -->
        <item name="android:editTextColor">#000000</item>
        <!-- Icon color -->
        <item name="android:queryHint">@android:color/black</item>
    </style>

    <!-- Custom NavigationView Style -->
    <style name="CustomNavigationViewTheme" >
        <item name="android:background">@color/black</item>
        <item name="itemTextColor">@color/white</item>

    </style>


    <!-- Custom Text Color -->
    <style name="TextViewColor2">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>


    <!-- Custom Title Color -->
    <style name="ToolbarStyle">
        <item name="titleTextColor">@color/black</item>
    </style>


    <!-- Custom Background Color -->
    <style name="BackgroundColor" >
        <item name="android:background">@android:color/black</item>
    </style>



</resources>